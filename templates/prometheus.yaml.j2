global:
  scrape_interval: {{ prometheus_scrape_interval }}  # Fréquence de collecte des métriques

scrape_configs:
  {% for job in prometheus_jobs %}
 - job_name: {{ job.name }}
    static_configs:
      - targets: 
        {% for target in job.targets %}
          - {{ target }}
        {% endfor %}
  {% endfor %}